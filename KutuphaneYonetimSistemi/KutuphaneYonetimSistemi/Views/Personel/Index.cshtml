@using KutuphaneYonetimSistemi.Models.Entity
@model List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h2>Personeller</h2>
<br />
<table class="table table-bordered">
    <tr  style="background-color:rgb(252, 178, 22)">
        <th>PERSONEL ID</th>
        <th>PERSONEL ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.ID</td>
            <td>@prs.PERSONEL</td><td>@Html.ActionLink("Sil", "PersonelSil", new { id = prs.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
            <td><a href="/Personel/PersonelGetir/ @prs.ID" class="btn btn-success">Güncelle</a></td>
        </tr>

    }

</table>
<a href="/Personel/PersonelEkle/" class="btn btn-primary">Yeni Personel Ekle</a>



