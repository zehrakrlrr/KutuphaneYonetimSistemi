@using KutuphaneYonetimSistemi.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h2>Ödünç Kitap Listesi</h2>
<br />

<table class="table table-bordered">
    <tr  style="background-color:rgb(252, 178, 22)">
        <th>İşlem Id</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>

        <th>İade Al</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.TBLKİTAP.AD</td>
            <td>@k.TBLUYELER.AD &nbsp @k.TBLUYELER.SOYAD</td>
            <td>@k.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(k.ALISTARİH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.VERİSTARİH).ToString("dd/MM/yyyy")</td>

            <td><a href="/Odunc/Oduncİade/@k.ID" class="btn btn-danger">Kitabı İade Et</a></td>

        </tr>
    }
</table>


