@using KutuphaneYonetimSistemi.Models.Entity
@model List<TBLKİTAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h2>Kitap Sayfası</h2>


@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
<div style="margin-bottom:15px; margin-top:15px;">
    <b>Aranacak Kitap Adını Girin: &nbsp</b> @Html.TextBox("p")
    <input type="submit" value="Ara" />
</div>
}



    <table class="table table-bordered">
        <tr style="background-color:rgb(252, 178, 22)">
            <th>Id</th>
            <th>Kitap Adı</th>
            <th>Kitap Yazarı</th>
            <th>Kategorisi</th>
            <th>Basım Yılı</th>
            <th>Yayınevi</th>
            <th>Sayfa</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.ID</td>
                <td>@k.AD</td>
                <td>@k.TBLYAZAR.AD&nbsp @k.TBLYAZAR.SOYAD</td>
                <td>@k.TBLKATEGORİ.AD</td>
                <td>@k.BASIMYIL</td>
                <td>@k.YAYINEVİ</td>
                <td>@k.SAYFA</td>
                <td>@k.DURUM</td>
                <td>@Html.ActionLink("Sil", "KitapSil", new { id = k.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
                <td><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Kitap/KitapEkle" class="btn btn-primary">Yeni Kitap Ekle</a>

