@using KutuphaneYonetimSistemi.Models.Entity;
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";

}
<br />
<h2>Duyurular</h2>
<br />
<table class="table table-bordered">
    <tr  style="background-color:rgb(252, 178, 22)">
        <th>Duyuru Id</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
     
        <th>İçerik</th>
    </tr>
    @foreach (var dyr in Model)
    {
        <tr>
            <td>@dyr.ID</td>
            <td>@dyr.KATEGORI</td>
            <td>@Convert.ToDateTime(dyr.TARİH).ToString("dd/MM/yyyy")</td>
            <td>@Html.ActionLink("Sil", "DuyuruSil", new { id = dyr.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
          
            <td><a href="/Duyuru/DuyuruDetay/ @dyr.ID" class="btn btn-default" style="background-color:skyblue">Detaylar</a></td>
        </tr>

    }

</table>
<a href="/Duyuru/YeniDuyuru/" class="btn btn-primary">Yeni Duyuru Ekle</a>



