@using KutuphaneYonetimSistemi.Models.Entity
@model List<TBLKATEGORİ>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<br />
<h2>Kategoriler</h2>
<br />
<table class="table table-bordered">
    <tr  style="background-color:rgb(252, 178, 22)">
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var ktg in Model) // foreach döngüsünün 4 tane parametresi vardır. değişkenin türü = var, değişkenin ismi = ktg, in komutu ve nerden alacağı = model
    {

        <tr>
            <td>@ktg.ID</td> 
            <td>@ktg.AD</td>
            <td>@Html.ActionLink("Sil", "KategoriSil", new { id = ktg.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
            <td><a href="/Kategori/KategoriGetir/@ktg.ID" class="btn btn-success">Güncelle</a></td>
        </tr>

    }

</table>
<a href="/Kategori/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>


